sp {verify*elaborate*segment
    (state <s>    ^name verify
                  ^superstate.operator <sop>)
    (<sop>    ^name verify
              ^segment <seg>)
-->
    (<s>    ^segment <seg>)
    }

sp {verify*elaborate*grounding
    (state <s>    ^name verify
                  ^segment.grounding <g>)
-->
    (<s>    ^grounding <g>)
    }

sp {verify*elaborate*to-verify
    (state <s>    ^name verify
                  ^segment <seg>)
    (<seg>    ^parses.parse <p>)
    (<p>    ^{<< obj-ref rel-ref >> <ref-type>} <ref-id>)
-->
    (<s>    ^to-verify <tv>)
    (<tv>    ^type <ref-type>
             ^ref <ref-id>)
    }

sp {verify*elaborate*verification-failure
    (state <s>    ^name verify
                  ^to-verify <tv>
                  ^not-verified <ref-id>)
    (<tv>    ^ref <ref-id>)
-->
    (<s>    ^verification failure)
    }