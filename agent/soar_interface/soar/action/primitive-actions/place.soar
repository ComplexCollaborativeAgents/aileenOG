sp {action*propose*place
    (state <s>    ^name action
                  ^holdsInHand <any>
                  ^desired <d>)
-->
    (<s>    ^operator <op> +)
    (<op>    ^name op_place
             ^object <any>
             ^location <loc>)
    }

